<% form_for @review do |f| %>
  <%= f.error_messages %>
  <%= f.hidden_field :book_id, :value => @review.book_id%>
  <p>
    <%= f.label :review %><br />
    <%= f.text_area :review %>
  </p>

  <p>
    <%= f.label :rating %><br />
    <%= f.text_field :rating %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>

